<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Pub year</th>
    <th>Pages</th>
    <th>Book Series</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td>
        <% if book.author %>
          <%= link_to book.author.fullname, author_path(book.author) %>
        <% end %>
      </td>
      <td><%= book.pub_year %></td>
      <td><%= book.pages %></td>
      <% if book.book_series %>
        <td><%= link_to book.book_series.title, book_series_path(book.book_series) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>

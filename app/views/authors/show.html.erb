<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @author.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @author.last_name %>
</p>

<p>
  <strong>Total books:</strong>
  <%= @author.books.count %>
</p>

  <strong>Pages written:</strong>
  <%= @author.pages_written %>
</p>

<p>
  <strong>Books:</strong>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Pub year</th>
    <th>Pages</th>
    <th>Book Series</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @author.books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= link_to book.author.fullname, author_path(book.author) %></td>
      <td><%= book.pub_year %></td>
      <td><%= book.pages %></td>
      <% if book.book_series %>
        <td><%= link_to book.book_series.title, book_series_path(book.book_series) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
</p>


<%= link_to 'Edit', edit_author_path(@author) %> |
<%= link_to 'Back', authors_path %>
